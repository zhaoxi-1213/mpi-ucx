PROTOTYPE VOID comm_iflush_buffer(COMM comm, REQUEST_OUT request)
{
    int ierr_c;
    MPI_Comm c_comm;
    MPI_Request c_req;

    c_comm = PMPI_Comm_f2c(*comm);

    ierr_c = @INNER_CALL@(c_comm, &c_req);
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(ierr_c);

    if (MPI_SUCCESS == ierr_c) {
       *request = PMPI_Request_c2f(c_req);
    }
}

