PROTOTYPE VOID comm_attach_buffer(COMM comm, BUFFER_ASYNC x, COUNT size)
{
    int c_ierr;
    MPI_Comm c_comm = PMPI_Comm_f2c(*comm);
    @COUNT_TYPE@ c_size = (@COUNT_TYPE@)*size;

    if (OMPI_CFI_IS_CONTIGUOUS(x)) {
        c_ierr = PMPI_Comm_attach_buffer(c_comm, OMPI_CFI_BASE_ADDR(x), c_size);
    } else {
        c_ierr = MPI_ERR_BUFFER;
        OMPI_ERRHANDLER_INVOKE(c_comm, c_ierr, FUNC_NAME);
    }
    if (NULL != ierr) *ierr = OMPI_INT_2_FINT(c_ierr);
}
